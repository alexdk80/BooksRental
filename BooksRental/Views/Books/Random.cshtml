@model BooksRental.ViewModels.RandomBookViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    This is a comment    
*@
@{ 
    var className = Model.Customers.Count > 5 ? "popular" : null;
}

<h2 class="popular">@Model.Book.Name</h2>
@if (Model.Customers.Count==0)
{
    <text>No one has rented this book before</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}



